<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.zacker.bookapp.ui.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/splash_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/splash_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.zacker.bookapp.ui.changeprofile.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/login_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/login_to_register"
            app:destination="@id/register_to_login" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zacker.bookapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/register_to_login"
        android:name="com.zacker.bookapp.ui.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/register_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>