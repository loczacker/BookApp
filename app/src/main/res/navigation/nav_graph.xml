<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.zacker.bookapp.ui.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/splash_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/splash_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.zacker.bookapp.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/login_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zacker.bookapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/home_to_change_profile"
            app:destination="@id/changeProfileFragment" />
        <action
            android:id="@+id/home_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/home_to_all_book"
            app:destination="@id/allBookFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bookIntroductionFragment"
            app:destination="@id/bookIntroductionFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.zacker.bookapp.ui.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeBookCaseFragment"
        android:name="com.zacker.bookapp.ui.homeBookCase.HomeBookCaseFragment"
        android:label="fragment_home_book_case"
        tools:layout="@layout/fragment_home_book_case" />
    <fragment
        android:id="@+id/homeDiscoverFragment"
        android:name="com.zacker.bookapp.ui.homeDiscover.HomeDiscoverFragment"
        android:label="fragment_home_discover"
        tools:layout="@layout/fragment_home_discover" />
    <fragment
        android:id="@+id/homeProfileFragment"
        android:name="com.zacker.bookapp.ui.homeProfile.HomeProfileFragment"
        android:label="HomeProfileFragment" />
    <fragment
        android:id="@+id/changeProfileFragment"
        android:name="com.zacker.bookapp.ui.changeProfile.ChangeProfileFragment"
        android:label="ChangeProfileFragment" >
        <action
            android:id="@+id/change_profile_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/change_profile_to_profile"
            app:destination="@id/homeProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/allBookFragment"
        android:name="com.zacker.bookapp.ui.allbook.AllBookFragment"
        android:label="fragment_all_book"
        tools:layout="@layout/fragment_all_book" >
        <action
            android:id="@+id/all_book_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_allBookFragment_to_bookIntroductionFragment"
            app:destination="@id/bookIntroductionFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookIntroductionFragment"
        android:name="com.zacker.bookapp.ui.bookIntroduction.BookIntroductionFragment"
        android:label="fragment_book_introduction"
        tools:layout="@layout/fragment_book_introduction" >
        <action
            android:id="@+id/action_bookIntroductionFragment_to_chapFragment"
            app:destination="@id/chapFragment" />
    </fragment>
    <fragment
        android:id="@+id/chapFragment"
        android:name="com.zacker.bookapp.ui.chapter.ChapFragment"
        android:label="ChapFragment" >
        <action
            android:id="@+id/action_chapFragment_to_bookIntroductionFragment"
            app:destination="@id/bookIntroductionFragment" />
        <action
            android:id="@+id/action_chapFragment_to_readBookFragment"
            app:destination="@id/readBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/readBookFragment"
        android:name="com.zacker.bookapp.ui.readbook.ReadBookFragment"
        android:label="fragment_read_book"
        tools:layout="@layout/fragment_read_book" />
</navigation>